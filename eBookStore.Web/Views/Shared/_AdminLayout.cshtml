<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/adminSite.css"/>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <nav class="admin-sidebar">
        <div class="sidebar-brand">
            <h2><i class="bi bi-book"></i> Bookstore Admin</h2>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-action="" asp-controller="Dashboard"
                   class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a asp-action="" asp-controller="AdminOrder"
                   class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminOrder" ? "active" : "")">
                    <i class="bi bi-cart3"></i>
                    Orders
                </a>
            </li>
            <li class="nav-item">
                <a asp-action="" asp-controller="AdminBook"
                   class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminBook" ? "active" : "")">
                    <i class="bi bi-cart3"></i>
                    Books
                </a>
            </li>
            <div class="nav-divider"></div>
        </ul>
    </nav>

    <!-- Mobile overlay for closing sidebar -->
    <div class="sidebar-overlay"></div>

    <!-- Top navbar -->
    <nav class="admin-navbar d-flex justify-content-between align-items-center">
        <button id="sidebarToggle" class="btn d-md-none">
            <i class="bi bi-list"></i>
        </button>

        <div class="d-none d-md-block">
            <h5 class="mb-0 text-dark">@ViewData["Title"]</h5>
        </div>

        <div class="d-flex align-items-center">
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#sidebarToggle').on('click', function() {
                $('.admin-sidebar').toggleClass('show');
                $('.sidebar-overlay').toggleClass('show');
            });

            $('.sidebar-overlay').on('click', function() {
                $('.admin-sidebar').removeClass('show');
                $('.sidebar-overlay').removeClass('show');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
