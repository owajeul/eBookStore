<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookstore Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <style>
        :root {
            --sidebar-width: 250px;
            --navbar-height: 60px;
            --primary-color: #5D3FD3;
            --secondary-color: #7F7C82;
            --success-color: #198754;
            --info-color: #0dcaf0;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --dark-color: #2F2F2F;
            --light-color: #f8f9fc;
        }

        body {
            font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
                'Helvetica Neue', Arial, sans-serif;
            font-size: 0.9rem;
            background-color: #f8f9fc;
        }

        /* Navbar styles */
        .admin-navbar {
            height: var(--navbar-height);
            background-color: white;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            z-index: 1030;
            padding: 0 1rem;
        }

        /* Sidebar styles - New color scheme */
        .admin-sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background: linear-gradient(135deg, #2B2D42 0%, #1A1A2E 100%);
            box-shadow: 0 0.15rem 1.75rem 0 rgba(0, 0, 0, 0.15);
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 1040;
            transition: all 0.3s;
        }

        .admin-sidebar .sidebar-brand {
            height: var(--navbar-height);
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
            background: rgba(0, 0, 0, 0.2);
        }

        .admin-sidebar .sidebar-brand h2 {
            color: white;
            font-size: 1.2rem;
            font-weight: 700;
            margin: 0;
        }

        .admin-sidebar .nav {
            padding: 1rem 0;
        }

        .admin-sidebar .nav-item {
            padding: 0 1.5rem;
            margin-bottom: 0.5rem;
        }

        .admin-sidebar .nav-link {
            display: flex;
            align-items: center;
            color: rgba(255, 255, 255, 0.7);
            padding: 0.8rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }

        .admin-sidebar .nav-link:hover {
            color: white;
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

        .admin-sidebar .nav-link.active {
            color: white;
            background: var(--primary-color);
            box-shadow: 0 4px 6px rgba(93, 63, 211, 0.25);
        }

        .admin-sidebar .nav-link i {
            margin-right: 0.75rem;
            font-size: 1.1rem;
            width: 1.25rem;
            text-align: center;
        }

        .admin-sidebar .nav-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin: 1rem 1.5rem;
        }

        /* Content wrapper */
        .content-wrapper {
            margin-left: var(--sidebar-width);
            padding-top: var(--navbar-height);
            min-height: 100vh;
            padding-bottom: 2rem;
        }

        .content {
            padding: 1.5rem;
        }

        /* Improved Card styles */
        .card {
            border: none;
            border-radius: 0.75rem;
            box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: transparent;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            font-weight: 600;
            padding: 1.25rem 1.5rem;
            border-top-left-radius: 0.75rem !important;
            border-top-right-radius: 0.75rem !important;
        }

        /* Statistic cards */
        .stat-card {
            border-radius: 0.75rem;
            overflow: hidden;
            position: relative;
        }

        .stat-card.primary-card {
            background: linear-gradient(45deg, #5D3FD3, #7C65DC);
        }

        .stat-card.success-card {
            background: linear-gradient(45deg, #198754, #28a745);
        }

        .stat-card.info-card {
            background: linear-gradient(45deg, #0d6efd, #0dcaf0);
        }

        .stat-card.warning-card {
            background: linear-gradient(45deg, #fd7e14, #ffc107);
        }

        .stat-card .card-body {
            padding: 1.5rem;
            position: relative;
            z-index: 1;
            color: white;
        }

        .stat-card .stat-title {
            font-size: 0.8rem;
            font-weight: 500;
            text-transform: uppercase;
            opacity: 0.8;
            margin-bottom: 0.5rem;
        }

        .stat-card .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0;
        }

        .stat-card .stat-icon {
            position: absolute;
            right: 1.5rem;
            bottom: 1.5rem;
            font-size: 3rem;
            opacity: 0.25;
        }

        /* Improved Tables */
        .table-container {
            border-radius: 0.75rem;
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
            white-space: nowrap;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            padding: 1rem 1.5rem;
            color: #6c757d;
            background-color: rgba(0, 0, 0, 0.01);
        }

        .table td {
            padding: 1rem 1.5rem;
            vertical-align: middle;
        }

        .table tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .table .status-badge {
            padding: 0.35rem 0.65rem;
            font-size: 0.75rem;
            font-weight: 500;
            border-radius: 0.375rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #4b30b0;
            border-color: #4b30b0;
        }

        /* Responsive adjustments */
        media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-100%);
            }

            .admin-sidebar.show {
                transform: translateX(0);
            }

            .content-wrapper {
                margin-left: 0;
            }

            .admin-navbar {
                left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="admin-sidebar">
        <div class="sidebar-brand">
            <h2><i class="bi bi-book"></i> Bookstore Admin</h2>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" href="/Admin">
                    <i class="bi bi-speedometer2"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a 
                    asp-action="" asp-controller="AdminBook"
                    class="nav-link 
                    @(ViewContext.RouteData.Values["Action"].ToString() == "Books" ? "active" : "")">
                    <i class="bi bi-book-half"></i>
                    Books
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "")" href="/Admin/Orders">
                    <i class="bi bi-cart3"></i>
                    Orders
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")" href="/Admin/Users">
                    <i class="bi bi-people"></i>
                    Users
                </a>
            </li>

            <div class="nav-divider"></div>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/Settings">
                    <i class="bi bi-gear"></i>
                    Settings
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">
                    <i class="bi bi-shop"></i>
                    View Store
                </a>
            </li>
        </ul>
    </nav>

    <!-- Top navbar -->
    <nav class="admin-navbar d-flex justify-content-between align-items-center">
        <button id="sidebarToggle" class="btn d-md-none">
            <i class="bi bi-list"></i>
        </button>

        <div class="d-none d-md-block">
            <h5 class="mb-0 text-dark">@ViewData["Title"]</h5>
        </div>

        <div class="d-flex align-items-center">
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="me-2 d-none d-lg-inline text-dark">Admin User</span>
                    <i class="bi bi-person-circle"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Profile</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i> Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.admin-sidebar').classList.toggle('show');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>