@model ErrorViewModel
@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment Environment
@{
    ViewData["Title"] = Model.Title;
}
@section Styles {
    <style>
        /* Minimal custom CSS */
        .header-gradient {
            background: linear-gradient(135deg, #dc3545, #b02a37);
        }

        .error-status {
            font-size: 3.5rem;
            font-weight: 700;
            line-height: 1;
            letter-spacing: -1px;
        }

        .tech-details {
            background-color: #f8f9fa;
            border-left: 4px solid #dc3545;
            font-family: monospace;
            white-space: pre-wrap;
        }
    </style>
}

<div class="container d-flex align-items-center justify-content-center py-4" style="min-height: 75vh;">
    <div class="card border-0 shadow w-100" style="max-width: 650px;">
        <div class="row g-0">
            <!-- Left: Error code and title -->
            <div class="col-md-4 header-gradient text-white p-4 d-flex flex-column justify-content-center align-items-center">
                <div class="error-status mb-2">@Model.StatusCode</div>
                <h1 class="h4 fw-bold text-center">@Model.Title</h1>
            </div>

            <!-- Right: Error content -->
            <div class="col-md-8">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <svg width="120" height="120" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="100" cy="100" r="95" fill="#f8d7da" />
                            <circle cx="70" cy="80" r="12" fill="#dc3545" />
                            <circle cx="130" cy="80" r="12" fill="#dc3545" />
                            <path d="M65,140 C65,140 100,110 135,140" stroke="#dc3545" stroke-width="8" fill="none" stroke-linecap="round" />
                        </svg>
                    </div>

                    <p class="lead text-secondary mb-3">@Model.Message</p>

                    @if (!string.IsNullOrEmpty(Model.Details) && Environment.IsDevelopment())
                    {
                        <div class="mb-3">
                            <span class="badge bg-danger mb-2">Development Mode</span>
                            <div class="tech-details rounded p-3 small">
                                <strong>Technical Details:</strong>
                                @Model.Details
                            </div>
                        </div>
                    }

                    <div class="d-flex flex-column flex-sm-row gap-2 mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-danger fw-semibold">Return to Homepage</a>
                        <button onclick="window.history.back()" class="btn btn-outline-secondary fw-semibold">Go Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>