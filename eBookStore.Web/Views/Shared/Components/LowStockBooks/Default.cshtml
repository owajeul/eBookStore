@model List<BookVM>
<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold"><i class="bi bi-exclamation-triangle me-2"></i>Low Stock Books</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <td>@book.Title</td>
                                    <td>@book.Author</td>
                                    <td>@book.Price.ToString("C")</td>
                                    <td><span class="badge bg-danger">@book.Stock</span></td>
                                    <td>
                                        <form asp-action="RestockBook" asp-controller="AdminBook" method="post" class="d-flex" style="gap: 0.5rem;">
                                            <input type="hidden" name="id" value="@book.Id" />
                                            <input type="number" name="quantityToAdd" min="1" placeholder="Qty" class="form-control form-control-sm w-25" required />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Restock</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
