@model AdminDashboardVM
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<!-- Statistics Cards -->
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card primary-card h-100">
            <div class="card-body">
                <div class="stat-title">Total Users</div>
                <div class="stat-value">@Model.TotalUsers</div>
                <i class="bi bi-people-fill stat-icon"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card success-card h-100">
            <div class="card-body">
                <div class="stat-title">Total Orders</div>
                <div class="stat-value">@Model.TotalOrders</div>
                <i class="bi bi-cart-check-fill stat-icon"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card info-card h-100">
            <div class="card-body">
                <div class="stat-title">Total Revenue</div>
                <div class="stat-value">@Model.TotalRevenue</div>
                <i class="bi bi-currency-dollar stat-icon"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card warning-card h-100">
            <div class="card-body">
                <div class="stat-title">Number of Books</div>
                <div class="stat-value">@Model.TotalBooks</div>
                <i class="bi bi-book-half stat-icon"></i>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Low Stock Books -->
    <div class="col-lg-12 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold"><i class="bi bi-exclamation-triangle me-2"></i>Low Stock Books</h6>
                <a href="/Admin/Books" class="btn btn-sm btn-primary">
                    <i class="bi bi-eye me-1"></i> View All
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
							@foreach (var book in Model.LowStockBooks)
							{
								<tr>
									<td>@book.Title</td>
									<td>@book.Author</td>
									<td>@book.Price.ToString("C")</td>
									<td><span class="badge bg-danger">@book.Stock</span></td>
									<td><button class="btn btn-sm btn-outline-primary"><i class="bi bi-plus-lg"></i> Restock</button></td>
								</tr>
							}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Top Selling Books -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold"><i class="bi bi-graph-up me-2"></i>Top Selling Books</h6>
                <a href="/Admin/Reports" class="btn btn-sm btn-primary">
                    <i class="bi bi-file-earmark-bar-graph me-1"></i> View Reports
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Copies Sold</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
							@foreach (var book in Model.TopSellingBooks)
							{
								<tr>
									<td>@book.Title</td>
									<td>@book.Author</td>
									<td><span class="badge bg-primary">@book.Genre</span></td>
									<td>@book.CopiesSold</td>
									<td>@book.Revenue.ToString("C")</td>
								</tr>
							}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>