@model CheckoutVM
@{
    ViewData["Title"] = "Complete Your Purchase";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
         
            <!-- Page Title -->
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary bg-opacity-10 px-3 py-2 rounded-circle me-3">
                    <i class="bi bi-credit-card text-primary fs-4"></i>
                </div>
                <h2 class="mb-0">Complete Your Order</h2>
            </div>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-4">
                <!-- Shipping Information -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-header bg-white border-0 pt-4 pb-3">
                            <h5 class="card-title mb-0 d-flex align-items-center">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                Shipping Details
                            </h5>
                        </div>
                        <div class="card-body pt-2">
                            <form method="post" asp-action="PlaceOrder" id="checkoutForm">
                                <div class="mb-4">
                                    <label asp-for="ShippingAddress" class="form-label fw-semibold">Delivery Address</label>
                                    <textarea asp-for="ShippingAddress" class="form-control form-control-lg rounded-3 border-primary-subtle" rows="3" placeholder="Enter your complete address" required></textarea>
                                    <span asp-validation-for="ShippingAddress" class="text-danger small"></span>
                                    <div class="form-text">We'll deliver your books to this address</div>
                                </div>
                                <div class="mb-4">
                                    <label asp-for="PhoneNumber" class="form-label fw-semibold">Contact Number</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-primary-subtle"><i class="bi bi-telephone"></i> +88</span>
                                        <input asp-for="PhoneNumber" class="form-control rounded-end border-primary-subtle" placeholder="01XXXXXXXXX" maxlength="11" id="phoneNumberInput" required/>
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>


                                <!-- Payment Method Selector -->
                                <div class="mb-2">
                                    <label class="form-label fw-semibold">Payment Method</label>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <div class="form-check card border rounded-3 p-3">
                                                <input class="form-check-input" type="radio" name="paymentMethod" id="cashOnDelivery" checked>
                                                <label class="form-check-label d-flex align-items-center" for="cashOnDelivery">
                                                    <i class="bi bi-cash-coin me-2 text-success fs-5"></i>
                                                    <span>Cash on Delivery</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-header bg-white border-0 pt-4 pb-3">
                            <h5 class="card-title mb-0 d-flex align-items-center">
                                <i class="bi bi-book text-primary me-2"></i>
                                Order Summary
                            </h5>
                        </div>
                        <div class="card-body pt-2">
                            <div class="mb-4">
                                @foreach (var item in Model.Items)
                                {
                                    <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                        <div class="bg-light rounded-3 p-2 me-3" style="width: 50px; height: 50px;">
                                            <i class="bi bi-book-half text-primary fs-3 d-flex justify-content-center"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0 text-truncate" style="max-width: 160px;" title="@item.Book.Title">@item.Book.Title</h6>
                                            <div class="small text-muted">Qty: @item.Quantity × @item.Book.Price.ToString("C")</div>
                                        </div>
                                        <div class="ms-3 text-end">
                                            <span class="fw-semibold">$@(item.Quantity * item.Book.Price)</span>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="bg-light p-4 rounded-4 mb-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Subtotal</span>
                                    <span>@Model.Items.Sum(i => i.Quantity * i.Book.Price).ToString("C")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Shipping</span>
                                    <span>$0.00</span>
                                </div>
                                <div class="d-flex justify-content-between mt-3 pt-3 border-top">
                                    <span class="fw-bold">Total</span>
                                    <span class="fw-bold fs-4 text-primary">@Model.Items.Sum(i => i.Quantity * i.Book.Price).ToString("C")</span>
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" form="checkoutForm" class="btn btn-primary btn-lg py-2">
                                    <i class="bi bi-lock-fill me-2"></i>
                                    Complete Purchase
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}