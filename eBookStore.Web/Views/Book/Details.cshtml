@model Book
@{
    ViewData["Title"] = "Book Details";
    var rating = 4.5; 
}

<div class="container my-5">

    <div class="row mb-5">
        <div class="col-md-5 text-center">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" style="max-height: 550px;" alt="Book Cover" />
        </div>

        <div class="col-md-7">
            <h2>@Model.Title</h2>
            <p class="text-muted mb-1"><strong>Author:</strong> @Model.Author</p>
            <p class="text-muted mb-1"><strong>Category:</strong> @Model.Genre</p>
            <p class="text-muted mb-3"><strong>Price:</strong> $@Model.Price</p>

            <div class="mb-3">
                <span class="text-warning">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Floor(rating))
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        else if (i == Math.Ceiling(rating) && rating % 1 >= 0.5)
                        {
                            <i class="bi bi-star-half"></i>
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                        }
                    }
                </span>
                <small class="text-muted ms-2">(@rating.ToString("0.0"))</small>
            </div>

            <form method="post" class="mt-4">
                <input type="hidden" name="bookId" value="1" />
                <button type="submit" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
            </form>
        </div>
    </div>

    <!-- Full Book Info -->
    <div class="mb-5 border-bottom pb-4">
        <h4 class="mb-4">Book Details</h4>

        <div class="row mb-2 pb-2 border-bottom">
            <div class="col-md-3 fw-bold">Title:</div>
            <div class="col-md-9">@Model.Title</div>
        </div>
        <div class="row mb-2 pb-2 border-bottom">
            <div class="col-md-3 fw-bold">Author:</div>
            <div class="col-md-9">@Model.Author</div>
        </div>
        <div class="row mb-2 pb-2 border-bottom">
            <div class="col-md-3 fw-bold">Genre:</div>
            <div class="col-md-9">@Model.Genre</div>
        </div>

        <div class="row mb-4 pb-2 border-bottom">
            <div class="col-md-3 fw-bold">Price:</div>
            <div class="col-md-9">@Model.Price</div>
        </div>

        <h5>Description</h5>
        <p class="fs-6">
           @Model.Description
        </p>
    </div>

    <!-- Reviews -->
    <div>
        <h4 class="mb-4">Customer Reviews</h4>

        <div class="border rounded p-3 mb-3">
            <div class="d-flex justify-content-between">
                <strong>JaneDoe92</strong>
                <span class="text-warning">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star"></i>
                </span>
            </div>
            <span class="text-muted small">(Mar 15, 2025)</span>
            <p class="mt-2 mb-0">Absolutely loved it! The character growth and atmosphere were perfect.</p>
        </div>

        <div class="border rounded p-3 mb-3">
            <div class="d-flex justify-content-between">
                <strong>BookLover88</strong>
                <span class="text-warning">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-half"></i>
                </span>
            </div>
            <span class="text-muted small">(Feb 28, 2025)</span>
            <p class="mt-2 mb-0">A classic for a reason. The garden scenes were so vivid and calming.</p>
        </div>

        <!-- Add Review Form -->
        <div class="mt-4">
            <h5>Add a Review</h5>
            <form method="post">
                <input type="hidden" name="bookId" value="1" />

                <div class="mb-3">
                    <label for="comment" class="form-label">Your Review</label>
                    <textarea class="form-control" id="comment" name="comment" rows="4" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="rating" class="form-label">Your Rating</label>
                    <select class="form-select w-25" id="rating" name="rating" required>
                        <option value="5">5 - Excellent</option>
                        <option value="4">4 - Good</option>
                        <option value="3">3 - Average</option>
                        <option value="2">2 - Poor</option>
                        <option value="1">1 - Terrible</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success">Submit Review</button>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
