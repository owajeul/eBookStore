@model BookVM
@{
    ViewData["Title"] = "Book Details";
    var rating = 4.5;
	var isAdmin = User.IsInRole(AppConstant.Role_Admin);
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a href="/Books" class="text-decoration-none">Books</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    @if(isAdmin)
    {
		@await Component.InvokeAsync("AdminBookControl", new {bookId = Model.Id})
    }
    <!-- Book Overview -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-5">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-lg-5 bg-light d-flex align-items-center justify-content-center p-4">
                    <img src="@Model.ImageUrl" class="img-fluid rounded-3" alt="@Model.Title">
                </div>
                <div class="col-lg-7 p-4 p-lg-5">
                    <div class="badge bg-primary bg-opacity-10 text-primary mb-3">@Model.Genre</div>
                    <h1 class="display-6 fw-bold mb-2">@Model.Title</h1>
                    <p class="text-muted mb-3">by <span class="fw-medium">@Model.Author</span></p>

                    <div class="mb-4">
                        <span class="text-warning me-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Floor(rating))
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else if (i == Math.Ceiling(rating) && rating % 1 >= 0.5)
                                {
                                    <i class="bi bi-star-half"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        </span>
                        <span class="text-muted">(@rating.ToString("0.0")) · 24 reviews</span>
                    </div>

                    <h3 class="h2 fw-bold text-primary mb-4">$@Model.Price</h3>

                    <div>
                        <button id="add-btn" data-bookId="@Model.Id" class="btn btn-primary btn-lg px-4 py-2">
                            <i class="bi bi-cart-plus me-2"></i> Add to Cart
                        </button>
                    </div>

                    <div class="d-flex flex-wrap gap-4 text-center text-muted">
                        <div>
                            <i class="bi bi-truck fs-4 d-block mb-2"></i>
                            <small>Free Shipping</small>
                        </div>
                        <div>
                            <i class="bi bi-cash fs-4 d-block mb-2"></i>
                            <small>Cash on delivery</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Book Details and Reviews Tabs -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-5">
        <div class="card-header bg-white p-0 border-0">
            <ul class="nav nav-tabs nav-fill" id="bookTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active py-3 px-4" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">
                        Description
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link py-3 px-4" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="details" aria-selected="false">
                        Book Details
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link py-3 px-4" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false">
                        Reviews <span class="badge bg-primary rounded-pill ms-2">2</span>
                    </button>
                </li>
            </ul>
        </div>
        <div class="card-body p-4 p-lg-5">
            <div class="tab-content" id="bookTabsContent">
                <!-- Description Tab -->
                <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                    <h4 class="fw-bold mb-4">About this book</h4>
                    <p class="lead mb-4">@Model.Description.Substring(0, Math.Min(150, Model.Description.Length))@(Model.Description.Length > 150 ? "..." : "")</p>
                    <p>@Model.Description</p>
                </div>

                <!-- Details Tab -->
                <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
                    <h4 class="fw-bold mb-4">Book Specifications</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th scope="row" class="w-25">Title</th>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <th scope="row">Author</th>
                                    <td>@Model.Author</td>
                                </tr>
                                <tr>
                                    <th scope="row">Genre</th>
                                    <td>@Model.Genre</td>
                                </tr>
                                <tr>
                                    <th scope="row">Price</th>
                                    <td>$@Model.Price</td>
                                </tr>
                                <tr>
                                    <th scope="row">ISBN</th>
                                    <td>978-1-XXXX-XXXX-X</td>
                                </tr>
                                <tr>
                                    <th scope="row">Publisher</th>
                                    <td>Example Publishing House</td>
                                </tr>
                                <tr>
                                    <th scope="row">Publication Date</th>
                                    <td>January 2025</td>
                                </tr>
                                <tr>
                                    <th scope="row">Pages</th>
                                    <td>356</td>
                                </tr>
                                <tr>
                                    <th scope="row">Language</th>
                                    <td>English</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Reviews Tab -->
                <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Customer Reviews</h4>
                        <button class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#addReviewForm">
                            <i class="bi bi-pencil me-2"></i> Write a Review
                        </button>
                    </div>

                    <!-- Review Summary -->
                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <h1 class="display-3 fw-bold text-primary">@rating.ToString("0.0")</h1>
                                <div class="text-warning mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(rating))
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else if (i == Math.Ceiling(rating) && rating % 1 >= 0.5)
                                        {
                                            <i class="bi bi-star-half"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </div>
                                <p class="text-muted mb-0">Based on 24 reviews</p>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-2">
                                <div class="text-muted me-3" style="width: 60px">5 stars</div>
                                <div class="progress flex-grow-1" style="height: 10px">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="text-muted ms-3" style="width: 60px">75%</div>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <div class="text-muted me-3" style="width: 60px">4 stars</div>
                                <div class="progress flex-grow-1" style="height: 10px">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="text-muted ms-3" style="width: 60px">20%</div>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <div class="text-muted me-3" style="width: 60px">3 stars</div>
                                <div class="progress flex-grow-1" style="height: 10px">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 5%" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="text-muted ms-3" style="width: 60px">5%</div>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <div class="text-muted me-3" style="width: 60px">2 stars</div>
                                <div class="progress flex-grow-1" style="height: 10px">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="text-muted ms-3" style="width: 60px">0%</div>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="text-muted me-3" style="width: 60px">1 star</div>
                                <div class="progress flex-grow-1" style="height: 10px">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="text-muted ms-3" style="width: 60px">0%</div>
                            </div>
                        </div>
                    </div>

                    <!-- Add Review Form -->
                    <div class="collapse mb-5" id="addReviewForm">
                        <div class="card border-0 bg-light rounded-4 p-4">
                            <div class="card-body">
                                <h5 class="fw-bold mb-3">Write Your Review</h5>
                                <form method="post">
                                    <input type="hidden" name="bookId" value="@Model.Id" />

                                    <div class="mb-3">
                                        <label for="rating" class="form-label">Your Rating <span class="text-danger">*</span></label>
                                        <div class="d-flex align-items-center">
                                            <select class="form-select" id="rating" name="rating" required style="max-width: 200px">
                                                <option value="5">5 - Excellent</option>
                                                <option value="4">4 - Good</option>
                                                <option value="3">3 - Average</option>
                                                <option value="2">2 - Poor</option>
                                                <option value="1">1 - Terrible</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="comment" class="form-label">Your Review <span class="text-danger">*</span></label>
                                        <textarea class="form-control" id="comment" name="comment" rows="4" placeholder="Share your thoughts about this book..." required></textarea>
                                    </div>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#addReviewForm">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Submit Review</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Review List -->
                    <div class="card border-0 shadow-sm rounded-4 mb-4">
                        <div class="card-body">
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <div class="avatar bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">JD</div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0 fw-bold">JaneDoe92</h6>
                                        <span class="text-warning">
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star"></i>
                                        </span>
                                    </div>
                                    <p class="text-muted small mb-2">March 15, 2025</p>
                                    <p class="mb-0">Absolutely loved it! The character growth and atmosphere were perfect.</p>
                                </div>
                            </div>
                            <hr>
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="avatar bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">BL</div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0 fw-bold">BookLover88</h6>
                                        <span class="text-warning">
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-half"></i>
                                        </span>
                                    </div>
                                    <p class="text-muted small mb-2">February 28, 2025</p>
                                    <p class="mb-0">A classic for a reason. The garden scenes were so vivid and calming.</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white py-3 border-0 text-center">
                            <a href="#" class="btn btn-link text-decoration-none">Load More Reviews</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
       
        $("#add-btn").on('click', function() {
            $.ajax({
                url: '/Cart/Add',
                type: 'POST',
                data: { bookId: @Model.Id },
                success: function(response) {
                    toastr[response.status](response.message)
                },
                error: function() {
                    toastr["error"]("An error occured adding cart")
                }
            });
        });
    </script>
}