
@model IEnumerable<Book>
@{
	ViewData["Title"] = "Books";
}
<div class="container mt-4">
	<div class="d-flex justify-content-start align-items-center mb-3">
		<a asp-action="Create" class="btn btn-primary">Add New Book</a>
	</div>

	<div class="card shadow">
		<div class="card-header bg-success text-center text-white py-2">
			<h2>Books</h2>
		</div>
		<div class="card-body">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Title</th>
						<th>Author</th>
						<th>Price</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var book in Model)
					{
						<tr>
							<td>@book.Title</td>
							<td>@book.Author</td>
							<td>@book.Price.ToString("C")</td>
							<td>
								<a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Edit</a>
								<a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary btn-sm">Details</a>
								<a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
