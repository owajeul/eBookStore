@model List<Order>
@{
    ViewData["Title"] = "Order Management";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        .orders-dashboard {
            background-color: #f8f9fa;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            padding: 25px;
            margin-bottom: 30px;
        }

        .page-title {
            color: #2c3e50;
            font-weight: 600;
            position: relative;
            padding-bottom: 12px;
            margin-bottom: 25px;
        }

            .page-title:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 60px;
                height: 3px;
                background: linear-gradient(to right, #3498db, #6c5ce7);
                border-radius: 3px;
            }

        .stats-card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            height: 100%;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            }

        .stats-icon {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            font-size: 1.5rem;
        }

        .bg-purple-light {
            background-color: rgba(108, 92, 231, 0.15);
            color: #6c5ce7;
        }

        .bg-blue-light {
            background-color: rgba(52, 152, 219, 0.15);
            color: #3498db;
        }

        .bg-green-light {
            background-color: rgba(46, 204, 113, 0.15);
            color: #2ecc71;
        }

        .bg-orange-light {
            background-color: rgba(230, 126, 34, 0.15);
            color: #e67e22;
        }

        .orders-table {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            border: none;
        }

            .orders-table thead {
                background: linear-gradient(135deg, #3498db, #6c5ce7);
                color: white;
            }

            .orders-table th {
                font-weight: 500;
                border: none;
                padding: 15px 20px;
            }

            .orders-table td {
                padding: 15px 20px;
                vertical-align: middle;
            }

            .orders-table tbody tr {
                transition: all 0.2s;
                border-bottom: 1px solid #f1f1f1;
            }

                .orders-table tbody tr:hover {
                    background-color: #f8f9fa;
                }

        .status-badge {
            padding: 6px 12px;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-processing {
            background-color: rgba(52, 152, 219, 0.15);
            color: #3498db;
        }

        .status-shipped {
            background-color: rgba(230, 126, 34, 0.15);
            color: #e67e22;
        }

        .status-delivered {
            background-color: rgba(46, 204, 113, 0.15);
            color: #2ecc71;
        }

        .status-cancelled {
            background-color: rgba(231, 76, 60, 0.15);
            color: #e74c3c;
        }

        .action-btn {
            border-radius: 8px;
            padding: 7px 15px;
            font-weight: 500;
            transition: all 0.3s;
            font-size: 0.85rem;
        }

        .view-btn {
            background-color: #3498db;
            border-color: #3498db;
        }

            .view-btn:hover {
                background-color: #2980b9;
                border-color: #2980b9;
            }

        .search-box {
            border-radius: 50px;
            padding: 10px 20px;
            padding-right: 50px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .search-container {
            position: relative;
        }

        .search-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #95a5a6;
        }

        .filter-dropdown .dropdown-toggle {
            border-radius: 50px;
            background-color: white;
            color: #2c3e50;
            border: 1px solid #e0e0e0;
            padding: 10px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

            .filter-dropdown .dropdown-toggle:focus {
                box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
            }

        .dropdown-menu {
            border-radius: 10px;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            padding: 10px;
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 8px 15px;
        }

        .pagination .page-item .page-link {
            border-radius: 50px;
            margin: 0 5px;
            color: #3498db;
            border: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .pagination .page-item.active .page-link {
            background-color: #3498db;
            color: white;
        }

        .pagination .page-item:first-child .page-link,
        .pagination .page-item:last-child .page-link {
            border-radius: 50px;
        }

        .dropdown-menu-arrow:before {
            content: "";
            width: 13px;
            height: 13px;
            background: #fff;
            position: absolute;
            top: -7px;
            right: 20px;
            transform: rotate(45deg);
            border-top: 1px solid #f1f1f1;
            border-left: 1px solid #f1f1f1;
        }

        .date-column {
            min-width: 120px;
        }

        .order-id-column {
            min-width: 100px;
        }

        media (max-width: 992px) {
            .orders-table

        {
            width: 100%;
            overflow-x: auto;
            display: block;
        }

        }
    </style>
}

<div class="container py-4">
    <div class="orders-dashboard">
        <h2 class="page-title">
            <i class="bi bi-clipboard-check me-2"></i>Order Management
        </h2>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stats-card card p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon bg-purple-light me-3">
                            <i class="bi bi-card-list"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted fs-6">Total Orders</h6>
                            <h4 class="mb-0 mt-1">@Model.Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card card p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon bg-blue-light me-3">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted fs-6">Processing</h6>
                            <h4 class="mb-0 mt-1">@Model.Count(o => o.Status == "Processing")</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card card p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon bg-orange-light me-3">
                            <i class="bi bi-truck"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted fs-6">Shipped</h6>
                            <h4 class="mb-0 mt-1">@Model.Count(o => o.Status == "Shipped")</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card card p-3">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon bg-green-light me-3">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted fs-6">Delivered</h6>
                            <h4 class="mb-0 mt-1">@Model.Count(o => o.Status == "Delivered")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filters -->
        <div class="row mb-4 align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
                <div class="search-container">
                    <input type="text" class="form-control search-box" placeholder="Search orders by ID, customer name...">
                    <span class="search-icon"><i class="bi bi-search"></i></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-md-end">
                    <div class="dropdown filter-dropdown me-2">
                        <button class="btn dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-funnel me-2"></i>Status
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li><a class="dropdown-item active" href="#">All</a></li>
                            <li><a class="dropdown-item" href="#">Processing</a></li>
                            <li><a class="dropdown-item" href="#">Shipped</a></li>
                            <li><a class="dropdown-item" href="#">Delivered</a></li>
                            <li><a class="dropdown-item" href="#">Cancelled</a></li>
                        </ul>
                    </div>
                    <div class="dropdown filter-dropdown">
                        <button class="btn dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-calendar3 me-2"></i>Time
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li><a class="dropdown-item active" href="#">All Time</a></li>
                            <li><a class="dropdown-item" href="#">Today</a></li>
                            <li><a class="dropdown-item" href="#">This Week</a></li>
                            <li><a class="dropdown-item" href="#">This Month</a></li>
                            <li><a class="dropdown-item" href="#">Last 3 Months</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Table -->
        <div class="table-responsive">
            <table class="table orders-table">
                <thead>
                    <tr>
                        <th class="order-id-column">Order ID</th>
                        <th class="date-column">Date</th>
                        <th>Customer</th>
                        <th>Items</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="fw-medium">#@order.Id</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td>Owajeul</td>
                            <td>@order.OrderItems.Count <span>items</span></td>
                            <td class="fw-medium">@order.TotalPrice.ToString("C")</td>
                            <td>
                                <span class="status-badge status-processing">@order.Status</span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-controller="AdminOrder" asp-route-id="@order.Id" class="btn btn-primary action-btn view-btn">
                                        <i class="bi bi-eye me-1"></i>View  
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div>
                <p class="text-muted mb-0">Showing 1 to 10 of @Model.Count() entries</p>
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Status badges dynamic coloring
        document.addEventListener('DOMContentLoaded', function() {
            const statusBadges = document.querySelectorAll('.status-badge');
            statusBadges.forEach(badge => {
                const status = badge.textContent.trim().toLowerCase();
                badge.classList.remove('status-processing', 'status-shipped', 'status-delivered', 'status-cancelled');
                badge.classList.add(`status-${status}`);
            });
        });
    </script>
}