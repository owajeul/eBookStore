@model LoginVM

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card shadow border">
                <div class="card-header bg-success bg-gradient ml-0 py-4">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="py-2 text-white">Login</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-12">
                            <section>
                                <form method="post">
                                    <input asp-for="RedirectUrl" hidden />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-floating mb-2">
                                        <input asp-for="Email" class="form-control" aria-required="true" placeholder="Enter your email" />
                                        <label asp-for="Email" class="form-label"></label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-2">
                                        <input asp-for="Password" class="form-control" aria-required="true" placeholder="Enter your password" />
                                        <label asp-for="Password" class="form-label"></label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="checkbox mb-2">
                                        <input class="form-check-input" asp-for="RememberMe" />
                                        <label class="form-label">
                                            Remember Me
                                        </label>
                                    </div>
                                    <div>
                                        <button type="submit" class="w-100 btn btn-outline-success">Log in</button>
                                    </div>
                                    <div class="d-flex justify-content-between pt-2">
                                        <small>
                                            <a asp-action="ForgotPassword">Forgot password?</a>
                                        </small>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
