@model LoginVM
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header text-center py-4" style="background: linear-gradient(135deg, #2196F3, #0D47A1);">
                    <h2 class="text-white fw-bold m-0">Welcome Back</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input asp-for="RedirectUrl" hidden />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" aria-required="true" placeholder="Enter your email" />
                            <label asp-for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" aria-required="true" placeholder="Enter your password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label" for="RememberMe">Remember me</label>
                        </div>

                        <button type="submit" class="btn w-100 py-2 mb-3 text-white" style="background: linear-gradient(to right, #2196F3, #1976D2);">Sign In</button>

                        <div class="text-center mb-3">
                            <span class="text-muted">or continue with</span>
                        </div>

                        <button type="button" class="btn btn-outline-secondary w-100 mb-3 d-flex align-items-center justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                            </svg>
                            Sign in with Google
                        </button>

                        <div class="d-flex justify-content-between mt-2">
                            <a  class="text-decoration-none" style="color: #1976D2;" asp-action="ForgotPassword">Forgot password?</a>
                            <a  class="text-decoration-none" style="color: #1976D2;" asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl">Create account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}